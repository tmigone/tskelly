{
  "name": "tskelly",
  "private": false,
  "version": "1.0.0",
  "description": "Boilerplate for TypeScript projects",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "keywords": [
    "typescript"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc --project tsconfig.json",
    "prepack": "npm run build",
    "prepare": "husky install",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "pre-commit": "lint-staged",
    "start": "node build/index.js",
    "watch": "nodemon --watch src --watch typings --ext js,ts,json --exec node -r ts-node/register/transpile-only src/index.ts",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmigone/tskelly.git"
  },
  "author": "Tom√°s Migone <tomasmigone@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tmigone/tskelly/issues"
  },
  "homepage": "https://github.com/tmigone/tskelly#readme",
  "devDependencies": {
    "ava": "^3.15.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "nodemon": "^2.0.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.3"
  },
  "files": [
    "bin",
    "build"
  ]
}
